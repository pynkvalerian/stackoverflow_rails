<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<%= form_for(@comment) do |f| %>
		<%= f.label :comment %>
		<%= f.text_area :description, class: 'form-control' %>
		<%= f.hidden_field :commentable_type, value: type.class %>
		<%= f.hidden_field :commentable_id, value: type.id %>
		<%= f.submit "Submit comment", class: "btn btn-primary" %>
		<%= render 'users/loginsignup' %>
		<% end %>

	</div>
</div>
