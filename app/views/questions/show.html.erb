<% provide(:title, "#{@question.title}") %>

<div class="container">
	<!-- QUESTION DETAILS -->
	<h1><%= @question.title %></h1>
	<p><%= @question.description %></p>
	<dd>by <%= link_to @question.user.name, @question.user %> posted on <%= @question.created_at %></dd>
	
	<div class="comments">
		<%= render @q_comments %>
	</div>

	<%= link_to "Add a comment", new_comment_path, class: "new_comment" %>
	<%= render 'comments/addcomment', :type => @question %>

	<!-- ANSWER FORM -->
	<div class="row">
		<div class="col-md-6 col-md-offset-3">
			<%= form_for(@answer) do |f| %>
			<%= f.label :answer %>
			<%= f.text_area :description, class: 'form-control' %>
			<%= f.hidden_field :question_id, value: @question.id %>
			<%= f.submit "Post your answer", class: "btn btn-primary" %>
			<%= render 'users/loginsignup' %>
			<% end %>
		</div>
	</div>

	<!-- LIST ALL ANSWERS -->
	<div class="row">
		<div class="col-md-6 col-md-offset-3">
			<h3>Answers</h3>
			<div class="answers">
				<%= render @answers %>
			</div>
		</div>
	</div>
</div>